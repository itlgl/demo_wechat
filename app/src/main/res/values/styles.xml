<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- wechat外观Dialog -->
    <style name="WechatDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/wechat_dialog_background</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- wechat外观progress Dialog -->
    <style name="WechatProgressDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/wechat_progress_dialog_background</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- wechat 绿色样式button，继承Borderless来去掉button的阴影效果 -->
    <style name="WechatButtonBlue" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/wechat_blue_button_background</item>
        <item name="android:textColor">@color/wechat_blue_button_text_color</item>
        <item name="android:textSize">17sp</item>
        <item name="android:minHeight">48dip</item>
    </style>
</resources>
